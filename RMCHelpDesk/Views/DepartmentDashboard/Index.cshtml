@model IEnumerable<RMCHelpDesk.Models.DepartmentWiseComplainViewModel>
@{
    ViewBag.Title = "Department Dashboard";
}
@section Styles
{

    <link href="~/Content/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
}


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h3>Department Dashboard</h3>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Config option 1</a>
                        </li>
                        <li>
                            <a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">


                    <table class="table table-striped dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Department Name
                                </th>
                                <th>
                                    Pending
                                </th>
                                <th>
                                    Assigned
                                </th>
                                <th>
                                    Solved
                                </th>
                                <th>
                                    Total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Department.Name</td>
                                    <td class="text-danger">@Html.ActionLink(item.Pending.ToString(), "Details", new { ctype = "Pending", dtype = item.Department.ID }, new { @class = "text-danger" })</td>
                                    <td class="text-info">@Html.ActionLink(item.Assigned.ToString(), "Details", new { ctype = "Assigned", dtype = item.Department.ID }, new { @class = "text-info" })</td>
                                    <td class="text-success">@Html.ActionLink(item.Solved.ToString(), "Details", new { ctype = "Solved", dtype = item.Department.ID }, new { @class = "text-success" })</td>
                                    <td>@( item.Pending + item.Assigned + item.Solved)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
</div>
@section scripts
{
<script src="~/Scripts/js/plugins/dataTables/datatables.min.js"></script>
<script>
    $(document).ready(function(){
        $('.dataTables-example').DataTable();
    });
    </script>
    }